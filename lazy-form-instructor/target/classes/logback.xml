<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- SmartFormInstructor package logger - default INFO, but can be set to DEBUG via LLM_DEBUG env var -->
    <logger name="com.fanyamin.instructor.llm.OpenAiLlmClient" level="${LLM_LOG_LEVEL:-INFO}" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

    <logger name="com.fanyamin.instructor" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
</configuration>
